<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://orderBrowse.caption"
        focusComponent="ordersTable">
    <data readOnly="true">
        <collection id="ordersDc"
                    class="com.company.jmixpm.entity.Order">
            <fetchPlan extends="_base">
                <property name="customer" fetchPlan="_base"/>
                <property name="orderLines" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="ordersDl">
                <query>
                    <![CDATA[select e from Order_ e]]>
                </query>
            </loader>
        </collection>
        <collection id="lastMonthOrdersDc"
                    class="com.company.jmixpm.entity.Order">
            <fetchPlan extends="_base">
                <property name="customer" fetchPlan="_base"/>
                <property name="orderLines" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="lastMonthOrdersDl">
                <query>
                    <![CDATA[select e from Order_ e where @between(e.date, now-1, now, month)]]>
                </query>
            </loader>
        </collection>
        <collection id="currentWeekOrdersDc"
                    class="com.company.jmixpm.entity.Order">
            <fetchPlan extends="_base">
                <property name="customer" fetchPlan="_base"/>
                <property name="orderLines" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="currentWeekOrdersDl">
                <query>
                    <![CDATA[select e from Order_ e where e.date >= FIRST_DAY_OF_CURRENT_WEEK
                            and e.date <= LAST_DAY_OF_CURRENT_WEEK]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="tabSheet" spacing="true">
        <tabSheet id="tabSheet" width="100%">
            <tab id="filterOrdersTab"
                 expand="ordersTable"
                 margin="true"
                 caption="Orders">
                <filter id="filter"
                        dataLoader="ordersDl">
                    <properties include=".*"/>
                </filter>
                <groupTable id="ordersTable"
                            width="100%"
                            dataContainer="ordersDc">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="orderNumber"/>
                        <column id="date"/>
                        <column id="customer"/>
                    </columns>
                    <simplePagination/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="ordersTable.create"/>
                        <button id="editBtn" action="ordersTable.edit"/>
                        <button id="removeBtn" action="ordersTable.remove"/>
                    </buttonsPanel>
                </groupTable>
            </tab>
            <tab id="lastMonthOrdersTab"
                 margin="true"
                 expand="lastMonthOrdersTable"
                 caption="Last month orders">
                <groupTable id="lastMonthOrdersTable"
                            width="100%"
                            dataContainer="lastMonthOrdersDc">
                    <actions>
                        <action id="refresh" type="refresh"/>
                    </actions>
                    <buttonsPanel>
                        <button id="refreshBtn" action="lastMonthOrdersTable.refresh"/>
                    </buttonsPanel>
                    <columns>
                        <column id="orderNumber"/>
                        <column id="date"/>
                        <column id="customer"/>
                    </columns>
                </groupTable>
            </tab>
            <tab id="currentWeekOrdersTab"
                 margin="true"
                 expand="currentWeekOrdersTable"
                 caption="Current week orders">
                <groupTable id="currentWeekOrdersTable"
                            width="100%"
                            dataContainer="currentWeekOrdersDc">
                    <actions>
                        <action id="refresh" type="refresh"/>
                    </actions>
                    <buttonsPanel>
                        <button id="refreshBtn1" action="currentWeekOrdersTable.refresh"/>
                    </buttonsPanel>
                    <columns>
                        <column id="orderNumber"/>
                        <column id="date"/>
                        <column id="customer"/>
                    </columns>
                </groupTable>
            </tab>
        </tabSheet>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
